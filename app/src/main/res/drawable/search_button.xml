<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:bottomRightRadius="@dimen/editview_radius"
                android:topRightRadius="@dimen/editview_radius"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:left="0dp">
        <shape>
            <solid android:color="@color/themeColor" />
            <corners android:bottomRightRadius="@dimen/editview_radius"
                android:topRightRadius="@dimen/editview_radius"/>
        </shape>
    </item>
</layer-list>