<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>
    <style name="AppHomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">false</item>

        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppBaseThemeMain"  parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">false</item>

        <item name="android:windowBackground">@drawable/launch_720_1280</item>//@null黑屏  @drawable/icon放一张启动图片
        <item name="android:windowNoTitle">true</item> //启动界面是否显示应用名称 true不显示 false显示

        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>


</resources>
